<style>
  .container {
    padding-left: 0%;
  }
  .card {
    border-radius: 0;
    background: #333;
    color: white;
  }

  .review {
        margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */
  }
  

  .btn {
    border-radius: 0;
    border-color: black;
    background-color: black;
  }

   body {
        background-color: #222;
        color: white;
        font-family: Arial, sans-serif;
    }
</style>

{{>message}}
<br>
<div class="container">
  <div class="row">

    <div class="col-md-6 col-12 d-flex align-items-stretch"> 
      <div class="card shadow-lg w-100"> 
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="{{image}}" class="card-img" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h2 class="card-title">{{name}}</h2>
              <p>{{director}} ({{year}})</p> 
              <p class="card-text">{{plot}}</p>
              <ul>
                <li>IMDB rating: {{imdbRating}}</li>
                <li>TMDB rating: {{tmdbRating}}</li>
                <li>Metacritic rating: {{metacriticRating}}</li>
              </ul>
              <hr>
              <div class="d-flex justify-content-between align-items-center">
                <div>{{language}}</div>
                {{#if user}}
                  <div>
                    <form method="POST" action="/likeMovie?movieID={{id}}">
                      <button type="submit" class="btn btn-primary">
                      {{#if liked}}
                        Unlike
                      {{else}}
                        Like
                      {{/if}}
                      </button>
                    </form>
                  </div>
                {{else}}
                  <div><a href="/login" class="btn btn-primary btn-md">Like</a></div>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    

   <div class="col-md-6 col-12">
  <div class="card shadow-lg">
    <div class="card-body">
      <h2 class="card-title">Add a review</h2>
      <form method="POST" action="/addReview?movieID={{id}}">
        <div class="form-group">
          <label for="rating">Rating</label>
          <select class="form-control" name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
          </select>
        </div>
        <div class="form-group">
          <label for="message">Review</label>
          <textarea class="form-control" name="review" rows="6" placeholder="Enter your review"></textarea>
        </div>
        <br>
        {{#if user}}
          <button type="submit" class="btn btn-primary">Submit</button>
        {{else}}
          <div><a href="/login" class="btn btn-primary btn-md">Submit</a></div>
        {{/if}}
      </form>
    </div>
  </div>
</div>
  </div>
</div>




<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="text-center">
        <h3>Reviews</h3>
        {{#each reviews}}
          <div class="card" style="width: 100%;">
            <div class="card-body">
              {{#if this.external_id}}
                <h5 class="card-title">{{this.external_id}}</h5>
              {{else}}
                <h5 class="card-title">{{this.user_id}}</h5>
              {{/if}}
              <h6 class="card-subtitle mb-2">{{this.rating}}/10</h6>
              <p class="card-text">{{this.review_text}}</p>
            </div>
          </div>
          <br>
        {{/each}}
      </div>
    </div>
  </div>
</div>